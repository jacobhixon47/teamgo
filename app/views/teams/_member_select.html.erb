<%= form_for [@team], class: 'box-pop', remote: true do |f| %>
  <div class="f-row responsive members-select-list">
    <% if @potential_users.empty? %>
      <div class="f-col-2 flex-center">
        <h1>There are no more users to add!</h1>
      </div>
    <% else %>
      <% @potential_users.each do |user| %>
        <div class="f-col-2 flex-center">
          <div class="checkbox-light">
            <%= check_box_tag "member_ids[]", user.id, false, :id => user.id %>
            <%= label_tag user.id, user.username, false %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="actions">
    <div class="f-row">
      <%= f.submit "Add Members", class: 'btn-pop f-col-1 flex-center' %>
    </div>
  </div>
<% end %>
